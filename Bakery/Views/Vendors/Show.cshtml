<!DOCTYPE html>
<html lang="en" dir="ltr">
    <head>
        <meta charset="utf-8">
        <title>Vendors</title>
        @using Bakery.Models;
        <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
    </head>
    <body>
        <h3>Here are all the orders for this vendor:</h3>

        <ol>
            @foreach (Order order in @Model["orders"])
            {
                <li><a href='/vendors/@Model["vendor"].Id/orders/@order.Id'>@order.Title, @order.Date, $@order.Price</a></li>
            }
        </ol>

        <p><a href='/vendors/@Model["vendor"].Id/orders/new'>Add a new order</a></p>
        <p><a href='/vendors'>Return to vendor list</a></p>
        <p><a href='/'>Return to Main Page</a></p>
    </body>
</html>